package com.bankapp.jvabasics;

import java.util.Arrays;

public class TC_6_Validatetwodimensionalarray {
	public static void main(String[] args) {
		//approach 1
		/*
		 * int a[][]=new int[3][2]; a[0][0]=2000; a[0][1]=4000; a[1][0]=6000;
		 * a[1][1]=8000; a[2][0]=10000; a[2][1]=12000;
		 */
		// approach2
		int a[][]= {{2000,4000},{6000,8000},{10000,12000}};
		
	System.out.println("no of rows are:"+a.length);
		System.out.println("no of columns are:"+a[0].length);
		//read singe value from array
		System.out.println(a[2][1]);
		//for reading rows and columns
		for(int r=0;r<=a.length-1;r++)
		{
			for(int c=0;c<a.length-1;c++)
			{
				System.out.print(a[r][c]+" ");
			}
		}
	}
}






















