package com.bankapp.jvabasics;

public class TC_10_ValidatetheStringmethods {

	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		String s1="welcome";
		String s2=new String("Welcome");
		System.out.println((s1+s2).length());
		System.out.println(s1.length());
		System.out.println(s1.equals(s2));
		System.out.println(s1.equalsIgnoreCase(s2));
		System.out.println(s1==s2);
	//concat
		System.out.println(s1+s2);
		System.out.println(s1.concat(s2));
		//replace
		String s3="jspiders";
		String s4=s3.replace("j", "q");
		String s5=" welcome   ";
		System.out.println(s5.length());
		System.out.println(s5.trim());
		System.out.println("after trimming:"+s5.length());
		String s6="abc+@gmail.com";
		String a[]=s6.split("@");
		System.out.println(a[0]);
		System.out.println(a[1]);
		
		System.out.println(s1.concat(s2).concat(s5));
}

}
















