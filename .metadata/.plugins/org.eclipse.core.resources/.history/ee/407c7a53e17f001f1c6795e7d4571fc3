package com.bankapp.jvabasics;
import java.util.Arrays;

public class TC_6_ValidateDoubleDimensonalArray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		  //approach 1
		
		int a[][]=new int[3][2]; 
		a[0][0]=200; 
		a[0][1]=400; 
		a[1][0]=600;
		 a[1][1]=800; 
		 a[2][0]=1000; 
		 a[2][1]=1200; 
		 
		 //to print an array
		  System.out.println(Arrays.toString(a));
		  //to read the single value from an array 
		  System.out.println(a[2][0]); 
		  //to read the multiple values from an array 
		  for(int r=0;r<=a.length-1;r++)
		  { for(int c=0;c<a.length-1;c++) {
		  System.out.println(a[r][c]);
		  } 
		  }
		 
		//approach 2
		int a[][]= {{1000,2000},{4000,6000},{8000,10000}};
		//to read the single value from an array
		System.out.println(a[2][0]);
		//find the length of the rows and coloumns
		System.out.println("length of the rows are:"+a.length);
		System.out.println("length of the columns are:"+a[0].length);
		//to read all the values from an array
		for(int r=0;r<=a.length-1;r++) { 
			for(int c=0;c<a.length-1;c++) {
		
			System.out.println(a[r][c]);
			}
		
	}
	}
}

	


